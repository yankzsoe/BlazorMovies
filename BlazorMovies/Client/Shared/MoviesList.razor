@if (Movies == null) {
    @if (NullTemplate != null) {
        @NullTemplate
    } else {
        <img src="https://media3.giphy.com/media/3oEjI6SIIHBdRxXI40/giphy.gif" />
    }
} else if (Movies.Count == 0) {
    @if (EmptyTemplate != null) {
        @EmptyTemplate
    } else {
        <text>There are no records to show</text>
    }
} else {
    <input type="checkbox" @bind="displayButtons" />
    @foreach (var movie in Movies) {
        <IndividualMovie Movie="movie" DisplayButtons="displayButtons"
                         DeleteMovie="DeleteMovie" />
    }
}

@code {
    [Parameter] public List<Movie> Movies { get; set; }
    [Parameter] public RenderFragment NullTemplate { get; set; }
    [Parameter] public RenderFragment EmptyTemplate { get; set; }
    bool displayButtons = false;

    private void DeleteMovie(Movie movie) {
        Movies.Remove(movie);
    }
}
